{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            // Asignarle el directorio del espacio de trabajo al Debugger (Brazilian-E-Commerce) 
            // Para que siempre se ejecute desde la raiz y tome en cuenta los paquetes.
            // Si los instalas con pip install -e . desde la raiz del proyecto, no es necesario.
            "cwd": "${workspaceFolder}",
            "env": { "PYTHONPATH": "${workspaceFolder}" }
        }
    ]
}